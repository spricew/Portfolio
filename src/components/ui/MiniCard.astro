---
const { text, Icon } = Astro.props;
---

<div
  class="relative flex w-80 h-50 flex-col gap-4 p-8 rounded-4xl ring-1 ring-white/20 bg-white/10 overflow-hidden"
>
  {Icon && (
    <>
      <Icon class="size-14 shrink-0" />
      <Icon
        class="absolute size-14 inset-0 blur-2xl scale-300 -z-1"
        aria-hidden="true"
      />
    </>
  )}

  <span class="text-2xl font-medium text-white">{text}</span>
</div>
