---
// icons
import InstagramIcon from "../../icons/instagramIcon.astro";
import MailIcon from "../../icons/MailIcon.astro";
import GithubIcon from "../../icons/GithubIcon.astro";
import LinkedInIcon from "../../icons/linkedinIcon.astro";
---

<ul class="flex gap-4 text-base text-white">
    <a href="#" class="socialLink" target="_blank">
        <MailIcon class="size-5" />
    </a>
    <a href="#" class="socialLink" target="_blank">
        <InstagramIcon class="size-5" />
    </a>
    <a href="#" class="socialLink" target="_blank">
        <GithubIcon class="size-5" />
    </a>
    <a href="#" class="socialLink" target="_blank">
        <LinkedInIcon class="size-5" />
    </a>
</ul>

<style>
    .socialLink {
        width: fit-content;
        display: flex;
        align-items: center;
        gap: 0.4rem;
        transition: 0.3s ease-out;
        background-color: var(--color-tertiary-300);
        color: var(--color-tertiary-950);
        padding: 0.6rem;
        border-radius: 100%;
    }

    .socialLink:hover {
        transition: 0.3s ease-out;
        transform: scale(1.05);
        opacity: 70%;
    }
</style>
