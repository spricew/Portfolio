---
import type { SocialProps } from "../ui/socialButton.astro";
import SocialButton from "../ui/socialButton.astro";
import MailIcon from "@/icons/MailIcon.astro";
import GithubIcon from "@/icons/GithubIcon.astro";
import LinkedInIcon from "@/icons/linkedinIcon.astro";

const socials: SocialProps[] = [
    {
        href: "mailto:medinaheyder@gmail.com",
        title: "Email",
        Icon: MailIcon,
    },
    {
        href: "https://github.com/spricew",
        title: "GitHub",
        Icon: GithubIcon,
    },
    {
        href: "https://www.linkedin.com/in/heyderix/",
        title: "LinkedIn",
        Icon: LinkedInIcon,
    },
];
---

<ul class="h-full inline-flex gap-3 items-center text-base text-white" >
    {
        socials.map((social: SocialProps) => (
            <SocialButton
                key={social.title}
                href={social.href}
                title={social.title}
                Icon={social.Icon}
            />
        ))
    }
</ul>
