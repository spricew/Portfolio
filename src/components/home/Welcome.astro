---
import Socials from "../home/Socials.astro";
import CustomButton from "../ui/CustomButton.astro";
import DownloadIcon from "../../icons/DownloadIcon.astro";
---

<section
    class="flex md:flex-row items-center justify-start gap-10 w-full h-[15rem] mb-6"
>
    <!-- Imagen -->
    <figure
        class="scale-in relative flex shrink-0 h-full aspect-square rounded-full overflow-hidden ring-1 ring-white/25 bg-white/15"
    >
        <img
            src="https://res.cloudinary.com/deyv1rwqh/image/upload/v1763430013/memoji_pfp_iobatg.png"
            alt="Portrait of Heyder Medina"
            class="w-full h-full z-10 object-cover object-center"
            loading="lazy"
            decoding="async"
        />

        <img
            src="https://res.cloudinary.com/deyv1rwqh/image/upload/v1763430013/memoji_pfp_iobatg.png"
            alt="Portrait of Heyder Medina"
            class="absolute blur-2xl scale-90 animate-pulse -rotate-12 z-9 w-full h-full object-cover object-center"
            loading="lazy"
            decoding="async"
        />
    </figure>

    <!-- Texto -->
    <div class="flex flex-col h-full w-fit justify-between">
        <header>
            <h1 class="text-4xl md:text-5xl font-semibold text-white">
                Hi, I'm Heyder Medina
            </h1>
            <h2 class="relative top-4 text-lg md:text-xl font-medium text-tertiary-300 font-['Figtree']">
                Junior Software Developer
            </h2>
        </header>
        <p class="text-lg tracking-wide text-balance text-white fade-in">
            I'm a software developer with experience in building modern and
            efficient web applications. I have a passion for frontend
            development and enjoy creating beautiful and functional user
            interfaces. I'm always eager to learn new technologies and improve
            my skills.
        </p>
        <div id="btnContainer" class="flex gap-3 items-center w-fit">
            <CustomButton
                text="Download CV"
                Icon={DownloadIcon}
                textColor="text-white"
                hoverTextColor="hover:text-tertiary-300"
                hoverBgColor="hover:bg-tertiary-950/10"
                href="/CV_Heyder.pdf"
                download={true}
            />
            <Socials />
        </div>
    </div>
</section>

<style>
    h1{
        animation: fadeIn 0.6s ease-out 0.1s forwards;
    }

    h2{
        animation: fadeIn 0.6s ease-out 0.2s forwards;
    }

    #btnContainer {
    animation: scaleIn 0.6s ease-out 0.4s forwards;
    }


    .fade-in {
        animation: fadeIn 0.6s ease-out 0.3s forwards;
    }

    .scale-in {
        animation: scaleIn 0.8s ease-out 0.2s forwards;
    }

    @keyframes fadeIn {
        0% {
            transform: translateY(50px);
            opacity: 0;
        }
        50% {
            transform: translateY(-10px);
            opacity: 0.8;
        }
        100% {
            transform: translateY(0);
            opacity: 1;
        }
    }

    @keyframes scaleIn {
        0% {
            transform: scale(0);
            opacity: 0;
            filter: blur(10px);
        }
        50% {
            transform: scale(1.1);
            opacity: 0.8;
            filter: blur(0);
        }
        100% {
            transform: scale(1);
            opacity: 1;
            filter: blur(0);
        }
    }
</style>